@{
}

<form method="post" asp-action="Add">
    <div class="form-group">
        <label asp-for="Number">Марка стали</label>
        <input asp-for="Number" class="form-control" placeholder="Номер трубы">
    </div>
    <div class="form-group">
        <label asp-for="Grade">Марка стали</label>
        <select  asp-for="Grade" asp-items = "@Html.GetEnumSelectList<Grade>()">
            <option>Выбрать марку стали</option>
        </select>
    </div>
    <div class="form-check">
        <input type="checkbox" asp-for="IsDefect">
        <label asp-for="IsDefect">Брак</label>
    </div>
    <div class="form-group">
        <label asp-for="Size">Размер</label>
        <input asp-for="Size" class="form-control" placeholder="Размер">
    </div>
    <div class="form-group">
        <label asp-for="Weight">Вес</label>
        <input asp-for="Weight" class="form-control" placeholder="Вес">
    </div>
    <button type="submit" class="btn btn-primary">Добавить</button>
</form>